<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/newsImage"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/an1"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newsHeading"
                android:layout_width="match_parent"
                android:textColor="#47755e"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="How to change the shape of the Textview using themes and styles"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/releaseDate"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/year"
                android:layout_height="wrap_content" />


            </LinearLayout>




        </LinearLayout>

    <TextView
        android:id="@+id/newsContent"
        android:layout_width="match_parent"
        android:textColor="#999966"
        android:scrollbars="vertical"
        android:text="@string/newsContent"
        android:layout_margin="10dp"
        android:layout_height="match_parent" />



</LinearLayout>