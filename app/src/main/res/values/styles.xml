<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="viepagertitlestrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>



    <!-- Animal_info style specifications-->
    <!---this is the style for the button see zoo animal-->
    <style name="animalspagebtnstyle" parent="AppBaseTheme">
        <item name="android:textColor">#ffff</item>
        <item name="android:background">#2C8470</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
    </style>

    <!---this is the style for the button Check On Map-->
    <style name="animalspagebtnstyle4" parent="AppBaseTheme">
        <item name="android:textColor">#ffff</item>
        <item name="android:background">#ff2b5740</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!---these are the styles for the Right side layout's textviews-->

    <style name="textview3basicstyle" parent="AppBaseTheme">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">#47755e</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>

    </style>

</resources>
