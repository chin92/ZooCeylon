<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/friends_report_fragment"
    >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose an Image"
                android:id="@+id/textView"
                android:singleLine="false"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgV_fr_report"
                android:layout_gravity="center_horizontal"
                android:onClick="openGallery_Friends"
                android:src="@drawable/avatar"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name"
                android:ems="10"
                android:id="@+id/txt_fr_report_name"
                android:layout_weight="0.08" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Surname"
                android:ems="10"
                android:id="@+id/txt_fr_report_surname"
                android:layout_weight="0.08" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nick Name"
                android:ems="10"
                android:id="@+id/txt_fr_report_nickName"
                android:layout_weight="0.08" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:id="@+id/txt_fr_report_age"
                android:layout_weight="0.08"
                android:hint="Age " />


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Gender"
                    android:id="@+id/textView3"
                    android:textSize="18dp" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGrp_fr_report"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/radioBtn_fr_report_1">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:id="@+id/radioBtn_fr_report_1"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:id="@+id/radioBtn_fr_report_2"
                        android:layout_weight="1" />

                </RadioGroup>



                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Submit"
                        android:layout_marginTop="10dp"
                        android:background="#ff2b5740"
                        android:id="@+id/btn_friend_report"
                        android:layout_gravity="center_horizontal"
                        android:onClick="btn_fr_report"
                        />







                </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/C:/Users/Chinthana/Desktop/INTEGRATED/ZooCeylon2_backup/app/src/main/res/layout/frg_friends_report.xml -->