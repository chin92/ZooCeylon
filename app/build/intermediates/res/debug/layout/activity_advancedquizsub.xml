<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Tharini.ZooCeylon.advancedquizsub">





    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2b5740"
        android:textColor="#ffff"
        android:text="Quiz Mammalia"
        android:id="@+id/mammal"

        android:layout_marginTop="70dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2b5740"
        android:textColor="#ffff"
        android:text="Quiz Aves"
        android:layout_marginTop="15dp"
        android:id="@+id/aves"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2b5740"
        android:textColor="#ffff"
        android:layout_marginTop="15dp"
        android:text="Quiz Reptilia"
        android:id="@+id/reptile" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2b5740"
        android:textColor="#ffff"
        android:text="Quiz Pisces"
        android:layout_marginTop="15dp"
        android:id="@+id/pisces" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2b5740"
        android:textColor="#ffff"
        android:text="Funquiz"
        android:layout_marginTop="15dp"
        android:id="@+id/fun" />







</LinearLayout>
